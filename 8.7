#include <cstring>
#include <iostream>

using namespace std;

void len(const char* str1, unsigned int &l){
    l = strlen(str1);
}

void cmp(const char* str1, const char* str2, int &c, int n, int y){
    if(y == 1){
        c = strcmp(str1, str2);
    }
    if(y == 2){
        c = strncmp(str1, str2, n);
    }
}

void chr(const char* str1, const char* &s){
    s = strchr(str1, 'l'); 
}

char* cpy(char* str, const char* str2, int y, int n){
    if(y == 1){
        strcpy(str, str2);
    }
    if(y == 2){
        strncpy(str, str2, n);
    }
    return str;
}

